---
import Layout from "../layouts/Layout.astro";
import { Share2 } from "lucide-react";
---

<Layout title="The Neural Cyclist - Home" isHomePage={true}>
	<div
		class="min-h-screen flex items-center justify-center p-4 md:p-8 lg:p-12 bg-white"
	>
		<div
			class="max-w-[1600px] w-full grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-24 items-center"
		>
			<!-- Left Column (Content) -->
			<div
				class="flex flex-col justify-center space-y-8 order-2 lg:order-1"
			>
				<div class="space-y-6">
					<span
						class="block text-sm font-mono text-gray-500 tracking-[0.2em] uppercase pl-1"
					>
						October 2026 Goal
					</span>

					<h1
						class="text-7xl md:text-8xl lg:text-[10rem] font-oswald font-bold text-black leading-[0.85] tracking-tighter uppercase"
					>
						Recovery<br />
						<span class="pl-2">Is A</span><br />
						Marathon
					</h1>

					<p
						class="text-lg md:text-xl text-gray-600 max-w-[45ch] leading-relaxed pl-1"
					>
						Combining neural technology and human resilience to
						conquer the Pyrenees. Follow the training.
					</p>
				</div>

				<div class="flex flex-wrap gap-4 pt-4 pl-1">
					<a
						href="/blog"
						class="inline-flex items-center justify-center px-8 py-4 bg-blue-600 text-white font-bold rounded-md hover:bg-blue-700 transition-colors duration-300 uppercase tracking-wide text-sm shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
					>
						Latest Analysis
					</a>
					<a
						href="/route"
						class="inline-flex items-center justify-center px-8 py-4 bg-white text-blue-600 border-2 border-blue-600 font-bold rounded-md hover:bg-blue-50 transition-colors duration-300 uppercase tracking-wide text-sm"
					>
						View the Route
					</a>
				</div>
			</div>

			<!-- Right Column (Visual) -->
			<div class="relative order-1 lg:order-2 group">
				<div
					class="relative aspect-square md:aspect-[4/5] lg:aspect-square w-full overflow-hidden rounded-[2.5rem] shadow-2xl"
				>
					<img
						src="/hero.jpg"
						alt="Cyclist Training"
						class="absolute inset-0 w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-700 ease-in-out scale-105 group-hover:scale-100"
					/>

					<!-- Overlay Card -->
					<div
						class="absolute top-6 right-6 md:top-8 md:right-8 bg-black/40 backdrop-blur-md border border-white/10 p-5 rounded-2xl text-white min-w-[200px] shadow-2xl"
					>
						<div
							class="flex items-start justify-between gap-4 mb-3"
						>
							<div>
								<p
									class="text-[10px] text-gray-300 uppercase tracking-wider mb-1 font-medium"
								>
									Current Status
								</p>
								<p class="font-bold text-base leading-tight">
									Training Phase 1
								</p>
							</div>
							<div class="text-white/80">
								<Share2 size={20} />
							</div>
						</div>
						<div
							class="inline-flex items-center gap-2 px-2 py-1 bg-white/10 rounded-md text-[10px] font-medium text-white/90 backdrop-blur-sm"
						>
							<span class="relative flex h-1.5 w-1.5">
								<span
									class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"
								></span>
								<span
									class="relative inline-flex rounded-full h-1.5 w-1.5 bg-blue-500"
								></span>
							</span>
							AI Powered
						</div>
					</div>

					<!-- Attribution -->
					<div
						class="absolute bottom-6 right-6 text-[10px] text-white/60 bg-black/30 backdrop-blur-sm px-3 py-1.5 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"
					>
						Photo by <a
							href="https://unsplash.com/@urban_vintage?utm_source=unsplash&utm_medium=referral&utm_content=creditCopyText"
							class="underline hover:text-white"
							target="_blank"
							rel="noopener noreferrer">Urban Vintage</a
						>
					</div>
				</div>

				<!-- Decorative Elements -->
				<div
					class="absolute -z-10 top-[-20px] right-[-20px] w-full h-full rounded-[2.5rem] border-2 border-gray-100 hidden lg:block"
				>
				</div>
			</div>
		</div>
	</div>

	<!-- Footer Badge -->
	<div class="fixed bottom-6 right-6 z-50 hidden lg:block">
		<a
			href="https://riding4gbs.com"
			target="_blank" rel="noopener noreferrer"
			class="flex items-center gap-3 px-4 py-2 bg-white rounded-full shadow-[0_8px_30px_rgb(0,0,0,0.12)] border border-gray-100 hover:shadow-[0_8px_30px_rgb(0,0,0,0.2)] transition-all duration-300 group hover:-translate-y-1"
		>
			<div
				class="w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center text-lg"
			>
				üêå
			</div>
			<div class="flex flex-col">
				<span
					class="text-[10px] font-medium text-gray-500 uppercase tracking-wider leading-none mb-0.5"
					>Supporting</span
				>
				<span
					class="text-sm font-bold text-gray-900 group-hover:text-blue-600 transition-colors leading-none"
					>The Slow Road Back</span
				>
			</div>
		</a>
	</div>
</Layout>
